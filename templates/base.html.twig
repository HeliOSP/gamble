<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/base.css">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                <div class="container--header header">
                    {% block body_header %}
                        <h1>
                            <a href="{{ path('homepage') }}">
                                Gamble Roulette
                            </a>
                        </h1>
                    {% endblock %}
                </div>
                <div class="container--left left">
                    {% block body_left %}
                    {% endblock %}
                </div>
                <div class="container--right">
                    {% block body_right %}
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script src="/js/jquery-3.5.1.min.js"></script>
        {% endblock %}
    </body>
</html>
